.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__user<
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu--edit
          = link_to new_group_path do
            = fa_icon 'edit'
        %li.side-header__box__menu--cog
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog'
  .side-groups
    - current_user.groups.each do |group|
      = link_to group_chats_path(group) do
        .side-group
          %p.side-group__name
            = group.name
          %p.side-group__message
            こめんと